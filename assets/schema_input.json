{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/CenterForMedicalGeneticsGhent/nf-cmgg-qdnaseq/master/assets/schema_input.json",
    "title": "CenterForMedicalGeneticsGhent/nf-cmgg-qdnaseq pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "meta": ["id"]
            },
            "fastq_1": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^.*\\.fastq(\\.gz)?$"        
            },
            "fastq_2": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^.*\\.fastq(\\.gz)?$"        
            }
        },
        "required": ["fastq_1", "sample"]
    }
}
